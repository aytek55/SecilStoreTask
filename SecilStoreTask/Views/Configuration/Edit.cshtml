@model ConfigurationRecords

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h2>Konfigürasyonu Düzenle</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label>Ad</label>
        <input asp-for="Name" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Tip</label>
        <input asp-for="Type" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label>Değer</label>
        <input asp-for="Value" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Aktif Mi?</label>
        <select asp-for="IsActive" class="form-control">
            <option value="true">Evet</option>
            <option value="false">Hayır</option>
        </select>
    </div>
    <div class="form-group">
        <label>Uygulama Adı</label>
        <input asp-for="ApplicationName" class="form-control" readonly />
    </div>
    <button type="submit" class="btn btn-primary">Güncelle</button>
</form>
